<%= form_with model: @user do |form| %>
  <% @user.errors.full_messages_for(:username).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <% @user.errors.full_messages_for(:email).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <% @user.errors.full_messages_for(:password).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <br>

  <%= form.label :username, "Username:" %><br>
  <%= form.text_field :username, placeholder: "Your pretty name here" %><br><br>

  <%= form.label :email, "Email:" %><br>
  <%= form.email_field :email, placeholder: "Your coolest email here" %><br><br>

  <%= form.label :password, "Password:" %><br>
  <%= form.password_field :password %><br><br>

  <%= form.submit "Create" %>
<% end %>